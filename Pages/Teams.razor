@page "/teams"

<h3>Teams</h3>

@if (teams == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>TEAM</th>
                <th>LOSSES</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var team in teams)
            {
                <tr>
                    <td>@team.cityName</td>
                    <td>@team.awayLosses</td>
                </tr>
            }
        </tbody>
    </table>
}